//判断1100年之后，2000年之前，那些年份是闰年
//代码需要执行900次

//do while---------------
Integer year = 1100;
//System.debug(year);
do{
    if(Math.mod(year, 4) == 0){
        if(Math.mod(year, 100) == 0){
            if(Math.mod(year, 400) == 0){
                system.debug(year + 'it is a leap year');
        	}
        }else{
        	system.debug(year + 'it is a leap year');
        }
    }
    year ++;
}while(year <= 2000);

//while---------------
Integer year = 1100;
//System.debug(year);
while(year <= 2000){
    if(Math.mod(year, 4) == 0){
        if(Math.mod(year, 100) == 0){
            if(Math.mod(year, 400) == 0){
                system.debug(year + 'it is a leap year');
        	}
        }else{
        	system.debug(year + 'it is a leap year');
        }
    }
    year ++;
}

-------------------------challenge----------------
//数字1-100
//如果数字整除于3，打印fizz
//如果数字整除于5，打印buzz
//如果数字整除于3和5，打印fizzbuzz

Integer num = 0;
//System.debug(num);
do{
    if(Math.mod(num, 3) == 0){
            system.debug(num + 'fizz');
    }else if(Math.mod(num, 5) == 0){
            system.debug(num + 'buzz');
    }else if (Math.mod(num, 3) == 0 && Math.mod(num, 5) == 0){
            system.debug(num + 'fizzbuzz');
    }else{
        system.debug(num );
    }
    num ++;
}while(num <= 100);
