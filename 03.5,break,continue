
//----------------------break----------------------
integer times = 10;
integer nTimes =100;                                        
for(integer i = 1; i <= nTimes; i++ ){
    system.debug('eat chiken' + i +'times');
    if(i == times){
       break;
    }
}


//----------------------continue----------------------

List<String> days = new List<String>{'Monday',
    								 'Tuesday',
    								 'Wednesday',
    								 'Thursday',
    								 'Friday',
    								 'Saturday',
    								 'Sunday'};
integer daysSize = days.size();  

for(integer i = 0; i < daysSize; i++ ){
    if(days.get(i) == 'Saturday'){
        continue;
    }
    system.debug(days.get(i) + 'eat chiken');
    
}
